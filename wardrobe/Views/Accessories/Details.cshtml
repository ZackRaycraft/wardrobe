@model wardrobe.Models.Accessory

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Accessories</h4>
    <hr />

        
    
     <div class="panel panel-default">
          <div class="panel-heading">
             <h3 class="panel-title">@Html.DisplayNameFor(model => model.Name)</h3>
          </div>
          <div class="panel-body">
              @Html.DisplayFor(model => model.Name)
          </div>
     </div>


    <div class="ViewPic">
        <div class="container-fluid">
            @if (Model.Photo == "1")
            {
                <img src="/Content/keys.jpg" />
            }
            else if (Model.Photo == "2")
            {
                <img src="/Content/watch.jpg" />
            }
            else if (Model.Photo == "3")
            {
                <img src="/Content/gold rings.jpg" />
            }
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@Html.DisplayNameFor(model => model.Type)</h3>
        </div>
        <div class="panel-body">
            @Html.DisplayFor(model => model.Type)
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@Html.DisplayNameFor(model => model.Color)</h3>
        </div>
        <div class="panel-body">
            @Html.DisplayFor(model => model.Color)
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@Html.DisplayNameFor(model => model.Season)</h3>
        </div>
        <div class="panel-body">
            @Html.DisplayFor(model => model.Season)
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@Html.DisplayNameFor(model => model.Occasion)</h3>
        </div>
        <div class="panel-body">
            @Html.DisplayFor(model => model.Occasion)
        </div>
    </div>
</div>
          
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.AccessoryID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
