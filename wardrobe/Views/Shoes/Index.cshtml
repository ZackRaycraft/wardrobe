@model IEnumerable<wardrobe.Models.Sho>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <ol class="breadcrumb">
        <li><a href="/Home/Index">Home</a></li>
        <li><a href="/Shoes/Index">Shoes</a></li>
    </ol>
</div>

<h2>Shoes!</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-3">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                    <p>@Html.ActionLink("Details", "Details", new { id = item.ShoeID }) </p>
                </div>
            </div>
        </div>
    }
</div>





