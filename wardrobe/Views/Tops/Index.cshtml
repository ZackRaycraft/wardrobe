@model IEnumerable<wardrobe.Models.Top>

@{
    ViewBag.Title = "Index";
}

<hr />
<div class="row">
    <ol class="breadcrumb">
        <li><a href="/Home/Index">Home</a></li>
        <li><a href="/Tops/Index">Tops</a></li>
    </ol>
</div>

<hr />

<h2>Tops!</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-3">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                    <p>@Html.ActionLink("Details", "Details", new { id = item.TopID }) </p>
                </div>
            </div>
        </div>
    }
</div>




